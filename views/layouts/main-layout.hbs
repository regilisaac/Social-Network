<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
   <link rel="stylesheet" href="/assets/css/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/style.css">
    {{#if loginActive}} 
    <link rel="stylesheet" href="/assets/css/login.css">
    {{/if}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    
</head>
<body>
{{#if isAuthenticated}}

    <header class="p-3 mb-3 border-bottom">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
          <img src="assets/img/icons8-hastag-64.png" class="bi me-2" width="50" height="50" >
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="#" class="nav-link px-2 link-secondary">Home</a></li>
          <li><a href="#" class="nav-link px-2 link-dark">Amigos</a></li>
          <li><a href="#" class="nav-link px-2 link-dark">Centro de notificaciones</a></li>
          <li><a href="#" class="nav-link px-2 link-dark">Eventos</a></li>
        </ul>

            <img src="{{userd.img}}" class="user-pic" onclick="toggleMenu()">
            <div class="sub-menu-wrap" id="subMenu">
              <div class="sub-menu">
                <div class="user-info">
                  <img src="{{userd.img}}" class="user-pic-info">
                  <h3 class="text-center">{{userd.usuario}}</h3>
                </div>
                <hr>
                <a href="/logout" class="sub-menu-link">
                  <img src="/assets/img/logout.png" >
                  <p class="centrar">Cerrar seccion</p>
                  <span>></span>

                </a>

              </div>
            </div>
          
          
      </div>
    </div>
  </header>
  {{/if}}
<main class="container">
     {{#if hasErrorMessages}}
  <div><br><br></div>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
  <ul>
    {{#each errorMessages}}
    <li>{{this}}</li>
    {{/each}}
  </ul>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
  {{/if}}


{{{body}}}

</main>



</body>
<script src="/assets/js/bootstrap/bootstrap.min.js"></script>


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
<script src="/assets/js/app/site.js"></script>
<script>
  let subMenu = document.getElementById("subMenu");
  function toggleMenu(){
    subMenu.classList.toggle("open-menu");
  }
</script>


</html>